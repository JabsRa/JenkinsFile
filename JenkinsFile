pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout the project from source control
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                // Build the Katalon project
                sh 'katalonc -noSplash -runMode=console -projectPath="https://github.com/JabsRa/Katalon-Test/LoyaltoQAassesment.prj" -reportFolder="Reports" -testSuitePath="Test Suites/Test Suite" -browserType="Web Service" -retry=0 -statusDelay=15'
            }
        }
        
        stage('Test') {
            steps {
                // Run the Katalon test suite
                sh 'katalonc -noSplash -runMode=console -projectPath="https://github.com/JabsRa//Katalon-Test/LoyaltoQAassesment.prj" -reportFolder="Reports" -testSuitePath="Test Suites/Test Suite" -browserType="Web Service" -retry=0 -statusDelay=15'
            }
        }
        
        stage('Publish Results') {
            steps {
                // Publish the test results to Jenkins
                junit 'Reports/execution/**/junit-report.xml'
            }
        }
    }
}
