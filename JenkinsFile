pipeline {
    agent any
    
    environment {
        KATALON_HOME = "C:\\Users\\jabal\\Katalon Studio"
        PROJECT_PATH = "C:\\Users\\jabal\\Katalon Studio\\Katalon-Test\\LoyaltoQAassesment.prj"
        PDF_REPORT = "C:\\Program Files\\wkhtmltopdf\\bin"
        TEST_SUITE_PATH = "Test Suites\\Test Suite"
        EXECUTION_PROFILE = "default"
        BROWSER_TYPE = "Web Service"
    }
    
    stages {
        stage('Run Tests') {
            steps {
                bat """
                    cd %KATALON_HOME%
                    katalonc.exe -noSplash -runMode=console -consoleLog -projectPath="%PROJECT_PATH%" -retry=0 -testSuitePath="%TEST_SUITE_PATH%" -executionProfile="%EXECUTION_PROFILE%" -browserType="%BROWSER_TYPE%" -apiKey="34467267-f0c6-4689-88c4-5a1ba8337bbc" --config -proxy.auth.option=NO_PROXY -proxy.system.option=NO_PROXY -proxy.system.applyToDesiredCapabilities=true -webui.autoUpdateDrivers=true
                """
            }
        }
        stage('Generate Report') {
            steps {
                bat """
                    cd %KATALON_HOME%
                    katalonc.exe -noSplash -runMode=console -projectPath="%PROJECT_PATH%" -reportFolder="Reports" -reportFileName="index.html" -apiKey="34467267-f0c6-4689-88c4-5a1ba8337bbc"
                    """
                    bat '"C:\\wkhtmltopdf\\bin\\wkhtmltopdf.exe" "Reports\\index.html" "Reports\\TestReport.pdf"'
            }
        }
    }
      post {
        always {
            archiveArtifacts artifacts: 'Reports/**'
        }
    }
}
